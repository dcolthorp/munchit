{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "./modules",
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist/stuff/",
    "lib": ["dom", "es6", "es2015", "es2016", "es2017"]
  },
  "exclude": ["node_modules", "dist"]
}
